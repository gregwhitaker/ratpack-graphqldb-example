schema {
    query: QueryType
    mutation: MutationType
}

type QueryType {
  allLinks: [Link]
  link( id: ID!): Link
}

type MutationType {
  linkSave( url: String! description: String!): Link
  linkUpdate( id: ID! url: String description: String): Link
  linkDelete( id: ID!): Boolean
}

type Link {
  id: ID!
  url: String!
  description: String!
}