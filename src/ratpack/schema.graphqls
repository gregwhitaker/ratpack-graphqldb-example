schema {
    query: QueryType
    mutation: MutationType
}

type QueryType {
  allLinks: [Link]
  link( id: Long!): Link
}

type MutationType {
  linkSave( url: String! description: String!): Link
  linkUpdate( id: Long! url: String description: String): Link
  linkDelete( id: Long!)
}

type Link {
  id: Long!
  url: String!
  description: String!
}